<% include header_dataManipulate %>

 <header class="search-header element-shadow d-flex flex-row justify-content-between 
        align-items-center">
        <button id="backButton" type="button" class="btn btn-light"  onclick="location.href = '/stores';">	<i class="glyphicon glyphicon-chevron-left"></i></button>
        <section class="title text-shadow">ADD STORE</section>
        <button id="logoutButton" type="button" class="btn btn-light"  onclick="location.href = '/logout';">Log Out</button>
    </header>

<form id="search" method = "POST">
    <article class="field">
        <section class="input-fields d-flex flex-row justify-content-center  align-items-center">

            <section class="label">
                Name:
            </section>
            <section class="input-form ">
               
                    <div class="input-container">
                        <input type="text" name="storeName"  maxlength="24" id="search">


                    </div>
               
            </section>

        </section>
    </article>

    <article class="field">
        <section class="input-fields d-flex flex-row justify-content-center  align-items-center">

            <section class="label">
                City:
            </section>
            <section class="input-form ">
               
                    <div class="input-container">
                        <input type="text" name="storeCityName"  maxlength="24" id="search">


                    </div>
               
            </section>

        </section>
    </article>

    <article class="field">
        <section class="input-fields d-flex flex-row justify-content-center  align-items-center">

            <section class="label">
                Street:
            </section>
            <section class="input-form ">
                
                    <div class="input-container">
                        <input type="text" name="storeStreetName"  maxlength="24" id="search">


                    </div>
               
            </section>

        </section>
    </article>

    <article class="field">
        <section class="input-fields d-flex flex-row justify-content-center  align-items-center">

            <section class="label">
                Rating:
            </section>
            <section class="input-form ">
               
                    <div class="input-container">
                        <input type="text" name="storeRating" maxlength="24" id="search">


                    </div>
               
            </section>


        </section>
    </article>

    <article class="field">
        <section class="input-fields d-flex flex-row justify-content-center  align-items-center">

            <section class="label">
                Type:
            </section>

            <section class="d-flex flex-column  align-items-center">

                <section class="d-flex flex-row">
                      
                    <section class="img">
                        <input type="radio" name="type" id="0" class="input-hidden"  value="electronic" checked ="checked"    />
                        <label for="0">
                            <img src="/images/laptop.png" alt="I'm sad" />
                        </label>
                    </section>
                    <section class="img">
                        <input type="radio" name="type" id="1" class="input-hidden"  value="meat" />
                        <label for="1">
                            <img src="/images/chop.png" alt="I'm sad" />
                        </label>
                    </section>
                    <section class="img">
                        <input type="radio" name="type" id="2" class="input-hidden"  value="groceries" />
                        <label for="2">
                            <img src="/images/ic_groceries.png" alt="I'm sad" />
                        </label>
                    </section>
                </section>

                <section class="d-flex flex-row" style="margin-top:20px">

                        <section class="img">
                            <input type="radio" name="type" id="3" class="input-hidden"  value="fish" />
                            <label for="3">
                                <img src="/images/fish.png" alt="I'm sad" />
                            </label>
                        </section>
                        <section class="img">
                            <input type="radio" name="type" id="4" class="input-hidden"  value="bread"  />
                            <label for="4">
                                <img src="/images/bread.png" alt="I'm sad" />
                            </label>
                        </section>
                        <section class="img">
                            <input type="radio" name="type" id="5" class="input-hidden"  value="vegetable" />
                            <label for="5">
                                <img src="/images/carrot.png" alt="I'm sad" />
                            </label>
                        </section>
                    </section>

            </section>

        </section>
    </article>
    </form>
    <article class="d-flex flex-row justify-content-center">
        <input id="saveButton" type="Submit" 
        class="button element-shadow" form="search" value="Submit">
       
    </article>

<% include footer %>