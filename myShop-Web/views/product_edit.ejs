<%- include header_dataManipulate %>

<header class="search-header element-shadow d-flex flex-row justify-content-between 
        align-items-center">
        <section class="title text-shadow">EDIT PRODUCT</section>
    </header>

    <form id="search" method="POST">
    <article class="field">
        <section class="input-fields d-flex flex-row justify-content-center  align-items-center">

            <section class="label">
                Name:
            </section>
            <section class="input-form ">
               
                    <div class="input-container">
                        <input
                        type="text" name="productName"  maxlength="24" id="search"  value="<%= product.name %>">


                    </div>
                
            </section>

        </section>
    </article>

    <article class="field">
            <section class="input-fields d-flex flex-row justify-content-center  align-items-center">
    
                <section class="label">
                    Type:
                </section>
                <section class="input-form ">
                  
                        <div class="input-container">
                            <input type="text" name="productType"  maxlength="24" id="search"  value="<%= product.type %>">
    
    
                        </div>
                    
                </section>
                
            </section>
        </article>

        <article class="field">
                <section class="input-fields d-flex flex-row justify-content-center  align-items-center">
        
                    <section class="label">
                        Subtype:
                    </section>
                    <section class="input-form ">
                       
                            <div class="input-container">
                                <input type="text" name="productSubType"  maxlength="24" id="search" value="<%= product.subType %>">
        
        
                            </div>
                        
                    </section>
                    
                </section>
            </article>

            <article class="field">
                    <section class="input-fields d-flex flex-row justify-content-center  align-items-center">
            
                        <section class="label">
                            Serving:
                        </section>
                        <section class="input-form ">
                           
                                <div class="input-container">
                                    <input type="text" name="productServing"  maxlength="24" id="search" value="<%= product.servingValue %>">
            
            
                                </div>
                           
                        </section>
                        <section class="label">
                               g
                            </section>
                        
                    </section>
                </article>

                <article class="field">
                        <section class="input-fields d-flex flex-row justify-content-center  align-items-center">
                
                            <section class="label">
                                Price:
                            </section>
                            <section class="input-form ">
                              
                                    <div class="input-container">
                                        <input type="text" name="productPrice"  maxlength="24" id="search" value="<%= product.price %>">
                
                
                                    </div>
                                
                            </section>
                            <section class="label">
                                    Ft
